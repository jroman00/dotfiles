# Docker aliases
alias dbomb='docker ps -q | xargs docker stop; docker ps -aq | xargs docker rm; docker volume prune -f --all; docker network prune -f'
alias dexec='docker exec -it'
alias dnuke='docker ps -q | xargs docker stop; docker ps -aq | xargs docker rm; docker images -aq | xargs docker rmi -f; docker volume prune -f --all; docker network prune -f'
alias dps='docker ps --format "table {{.ID}}\t{{.Image}}\t{{.RunningFor}}\t{{.Status}}\t{{.Ports}}\t{{.Names}}"'

# Docker compose aliases
alias dc='docker-compose'
